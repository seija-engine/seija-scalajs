<Panel xmlns:c="/" xmlns:core="/core/">
    <Template>
        <Entity>
            <Components>
                <EventBoard name="TestP" />
                <Transform />
                <Rect2D size="320,240" />
                <Transparent />
            </Components>
            
            <c:MyList size="320,240" dataSource="(ctx-data data.itemList)">
                <ItemTemplate>
                    <Entity>
                        <Components>
                            <Transform />
                            <Rect2D size="300,50" />
                        </Components>
                        <core:Label size="40,30" position="-50,0,0" text="(str (ctx-data data.itemId))" color="#ff0000" />
                        <core:Label size="40,30" position="-10,0,0" text="(str (ctx-data data.itemName))" />
                        <core:Sprite OnClick="#(emit :DeleteItem (ctx-data data.itemId))" 
                                     size="260,176" scale="0.2,0.2,1" position="50,0,0" sheet="(env paperSheet)" spriteName="BlueButton" />
                    </Entity>
                </ItemTemplate>
            </c:MyList>
            
        </Entity>
    </Template>
</Panel>