<ContextMenu width="111" margin="0,24,0,0" viewType="Absolute" ver="Start" >
    <Param.Template>
        <Frame >
            <Image texture="(env res.white)" margin="0,0,0,0" color="#000000" />
            <Image texture="(env res.white)" margin="1,1,1,1" color="#eeeeee" />
            <Stack orientation="Vertical" OnTouchStart="#(log 123)" padding="1,6.5,0,10">
                <Slot.Children />
            </Stack>
        </Frame>
    </Param.Template>
    <Param.ItemTemplate>
        <Frame  width="100" height="30">
            <Image  texture="(env res.white)" margin="6,0,0,0"
                    color="(attr-fbind :IsHover #(do (log %) (if % color.blue color.green)))" />
            <Image  texture="(env res.white)" 
                    color="#666666" margin="6,29,0,0" />
            <Label  OnTouchStart="#(emit :select-menu)"  margin="0,1,0,0"
                    OnMouseEnter="#(emit :menu-enter)" 
                    OnMouseLeave="#(emit :menu-leave)" 
                    fontSize="20" 
                    text="(attr-bind :Name)" font="(env res.font)" />
        </Frame>
    </Param.ItemTemplate>
</ContextMenu><!--color="(attr-fbind :IsHover #(if % color.white color.black))"-->