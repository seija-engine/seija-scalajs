<ContextMenu width="111" margin="0,24,0,0" viewType="Absolute" >
    <Param.Template>
        <Frame >
            <Image position="0,0,0.3" texture="(env res.white)" margin="0,0,0,0" color="#000000" />
            <Image position="0,0,0.2" texture="(env res.white)" margin="1,1,1,1" color="#eeeeee" />
            <Stack position="0,0,0.1" orientation="Vertical" OnTouchStart="#(log 123)" padding="1,6.5,0,10">
                <Slot.Children />
            </Stack>
        </Frame>
    </Param.Template>
    <Param.ItemTemplate>
        <Frame  width="100" height="30">
            <Image  texture="(env res.white)"  OnClick="#(log 111)"
                    color="(attr-fbind :IsSelect #(if % color.blue color.transparent))" />
            <Image  texture="(env res.white)" 
                    color="#666666" margin="6,29,0,0" />
            <Label OnTouchStart="#(emit :select-menu)"  margin="0,1,0,0"
                   OnMouseEnter="#(emit :select-menu-enter)" 
                   fontSize="20" color="(attr-fbind :IsSelect #(if % color.white color.black))"
                   text="(attr-bind :Name)" font="(env res.font)" />
        </Frame>
    </Param.ItemTemplate>
</ContextMenu>