<ImageControl>
    <Template>
        <Entity>
            <Components>
                <EventNode  />
                <Transform   scale="(attr :scale)" />
                <Rect2D />
                <LayoutView size="(vec2 (attr :width) (attr :height))"
                            margin="(attr :margin)"
                            padding="(attr :padding)"
                            position="(attr :position)"
                            hor = "(attr :hor)"
                            ver = "(attr :ver)"
                            viewType = "(attr :viewType)"
                />
                <ImageRender texture="(env res.white)" color="(attr-bind :color)" />
                <Transparent />
            </Components>
        </Entity>
    </Template>
</ImageControl>