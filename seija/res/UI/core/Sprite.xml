<SpriteControl>
    <Template>
        <Entity>
            <Components>
                <Transform position="(attr :position)" scale="(attr :scale)" />
                <Rect2D size="(attr-bind :size)" />
                <Transparent />
                <SpriteRender color="(attr :color)" type="(attr :type)" spriteName="(attr-bind :spriteName)" sheet="(attr-bind :sheet)" />
                <EventNode OnClick="(node-ev-bind :OnClick)" />
                <LayoutView size="(vec2 (attr :width) (attr :height))"
                            margin="(attr :margin)"
                            padding="(attr :padding)"
                            position="(attr :position)"
                            hor = "(attr :hor)"
                            ver = "(attr :ver)"
                />
            </Components>
            <Slot.Children />
        </Entity>
    </Template>
</SpriteControl>