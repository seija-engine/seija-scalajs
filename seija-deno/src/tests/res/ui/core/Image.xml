<Control attrs="[:position :scale :size :anchor :color :texture]">
    <ContentTemplate>
        <Entity>
            <Components>
                <Transform position="(bind :position)" scale="(bind :scale)" />
                <Rect2D size="(bind-or :size (vec2 120 25))" />
                <ImageRender texture = "(bind :texture)" color="(bind :color)" />
            </Components>
        </Entity>
    </ContentTemplate>
</Control>